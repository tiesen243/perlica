  },
  "devDependencies": {
    "@effect/language-service": "^0.76.0",
    "@types/bun": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "typescript": "^5.9.3"
