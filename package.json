{
  "name": "perlica",
  "version": "0.0.1",
  "private": true,
  "description": "A simple API server built with Elysia, Effect and Drizzle ORM, using Bun as the runtime.",
  "homepage": "https://perlica-alpha.vercel.app",
  "bugs": {
    "url": "https://github.com/tiesen243/perlica/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiesen243/perlica"
  },
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
